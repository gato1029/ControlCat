<syncfusion:ChromelessWindow x:Class="OrganizadorCat.Views.Asignacion.AsignacionScheduler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                                              xmlns:Converter="clr-namespace:OrganizadorCat.Converters"
    xmlns:Syncfusion="clr-namespace:Syncfusion.Windows.PropertyGrid;assembly=Syncfusion.PropertyGrid.Wpf"
    xmlns:behaviours="http://schemas.microsoft.com/xaml/behaviors"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:local="clr-namespace:OrganizadorCat.Views.Asignacion" xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
                             mc:Ignorable="d"
        Title="AsignacionScheduler" Height="600" Width="500">
    
    <Window.Resources>
        <Converter:IdToStringConverter x:Key="IdToStringConverter" />
        <Converter:ObservableStringToList x:Key="ObservableStringToList" />
        <Converter:StringValidateConverter x:Key="StringValidateConverter" />
        <Converter:EmailValidateConverter x:Key="EmailValidateConverter" />
        <Converter:ValidatorConverter x:Key="ValidatorConverter" />
    </Window.Resources>

    <StackPanel Margin="15">
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Margin="5" Text="Proyecto:" />
                <syncfusion:SfTextInputLayout
    ErrorForeground="IndianRed"
    ErrorText="Ingrese un valor"
    Foreground="LightSeaGreen"
    HasError="{Binding Equipo.Nombre, Converter={StaticResource StringValidateConverter}}"
    Hint="Ingrese el nombre">
                    <syncfusion:ComboBoxAdv x:Name="ComboProyecto"  />
                </syncfusion:SfTextInputLayout>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Margin="5" Text="Usuarios:" />
                <syncfusion:SfTextInputLayout
    ErrorForeground="IndianRed"
    ErrorText="Ingrese un valor"
    Foreground="LightSeaGreen"
    HasError="{Binding Equipo.Nombre, Converter={StaticResource StringValidateConverter}}"
    Hint="Ingrese el nombre">
                    <syncfusion:ComboBoxAdv x:Name="Usuarios"  />
                </syncfusion:SfTextInputLayout>
            </StackPanel>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal">

                <StackPanel>
                    <TextBlock Margin="5" Text="Fecha Inicio:" />
                    <syncfusion:SfTextInputLayout
                        Width="120"
                        ErrorForeground="IndianRed"
                        Foreground="LightSeaGreen">
                        <syncfusion:DateTimeEdit DateTime="{Binding Proyecto.FechaInicio, UpdateSourceTrigger=PropertyChanged}" />
                    </syncfusion:SfTextInputLayout>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Margin="5" Text="Fecha Termino:" />
                    <syncfusion:SfTextInputLayout
                        Width="120"
                        ErrorForeground="IndianRed"
                        Foreground="LightSeaGreen">
                        <syncfusion:DateTimeEdit DateTime="{Binding Proyecto.FechaFin, UpdateSourceTrigger=PropertyChanged}" />
                    </syncfusion:SfTextInputLayout>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <TextBlock Margin="5" Text="Horas Asignadas:" />
                <syncfusion:SfTextInputLayout 
                        Width="120"
                    HorizontalAlignment="Left"
                        ErrorForeground="IndianRed"
                        Foreground="LightSeaGreen">
                    <syncfusion:IntegerTextBox Value="{Binding Proyecto.HorasEstimadas, UpdateSourceTrigger=PropertyChanged}" />
                </syncfusion:SfTextInputLayout>
            </StackPanel>
            <StackPanel Grid.Row="4">
                <TextBlock Margin="5" Text="Comentario:" />
                <syncfusion:SfTextInputLayout
                ErrorForeground="IndianRed"
                ErrorText="Ingrese un comentario"
                Foreground="LightSeaGreen"
                HasError="{Binding Equipo.Nombre, Converter={StaticResource StringValidateConverter}}"
                Hint="Ingrese el nombre">
                    <TextBox Text="{Binding Equipo.Nombre, UpdateSourceTrigger=PropertyChanged}" />
                </syncfusion:SfTextInputLayout>
            </StackPanel>
            <StackPanel
            Grid.Row="6"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
                <syncfusion:ButtonAdv
                Margin="10"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding GuardarCommand}"
                CommandParameter="{Binding Equipo.Id, Converter={StaticResource IdToStringConverter}}"
                IconHeight="50"
                IconWidth="50"
                Label="Guardar"
                SizeMode="Large">
                    <syncfusion:ButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Grid>
                                <materialIcons:MaterialIcon Kind="CloudArrowUp" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:ButtonAdv.IconTemplate>
                </syncfusion:ButtonAdv>
            </StackPanel>
        </Grid>
    </StackPanel>
</syncfusion:ChromelessWindow>
